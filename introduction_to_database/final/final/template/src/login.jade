{% extends 'base.html' %}
{% block css %}
link(href="{{ S }}/css/login.css", rel="stylesheet")
{% endblock %}
{% block js %}
script.
  form_did_load = function(obj) {
    if (obj.status == 0) {
      window.location = '/';
    }
    else {
      $('div#message').html(obj.message);
    }
  }

script(src="{{ S }}js/async_form.js")
{% endblock %}
{% block container %}
div#message

.tabs
  ul.nav.nav-pills
    li.active
      a(href="#tab1", data-toggle="pill") Signin
    li
      a(href="#tab2", data-toggle="pill") Signup

.tab-content
  .active.tab-pane#tab1
    form.form-signin(action='/login', method='POST', role='form')
        h2.form-signin-heading Please sign in
        input.form-control(name='username', type='text', placeholder='Username', required='', autofocus='')
        input.form-control(name='password', type='password', placeholder='Password', required='')
        label.checkbox
          input(type='checkbox', value='remember-me')
          | Remember me
        button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign in

  .tab-pane#tab2
    form.form-signin(action='/signup', method='POST', role='form')
        h2.form-signin-heading Please sign up
        input.form-control(name='username', type='text', placeholder='Username', required='', autofocus='')
        input.form-control(name='password', type='password', placeholder='Password', required='')
        input.form-control(name='repeat-password', type='password', placeholder='Repeat Password', required='')

        input.form-control(name='email', type='text', placeholder='Email', required='', autofocus='')
        input.form-control(name='last_name', type='text', placeholder='Last name', required='', autofocus='')
        input.form-control(name='first_name', type='text', placeholder='Last name', required='', autofocus='')

        button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign up
{% endblock %}
